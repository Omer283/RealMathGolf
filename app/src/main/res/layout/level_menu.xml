<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/bubble8"
    android:weightSum="10"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Please select a level"
        android:textAlignment="center"
        android:textSize="35sp"></TextView>
    <LinearLayout
        android:id="@+id/lvlSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="12">

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="55dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/l1"
            android:textAllCaps="false"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/alfa_slab_one"
                android:text="Level"
                android:textAlignment="center"
                android:textSize="30dp"></TextView>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/alfa_slab_one"
                android:text="-1"
                android:textAlignment="center"
                android:textSize="30dp"></TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btnStartLevel"
                android:layout_width="105dp"
                android:layout_height="111dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:src="@drawable/c3"></de.hdodenhof.circleimageview.CircleImageView>

            <ImageView
                android:id="@+id/ivStars"
                android:layout_width="196dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_weight="2"
                android:fontFamily="@font/alfa_slab_one"
                android:src="@drawable/star3"
                android:text="-1 stars"
                android:textAlignment="center"
                android:textSize="30dp"></ImageView>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="55dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/r1"
            android:textAllCaps="false"></ImageView>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivPlayRandom"
        android:layout_width="70dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:src="@drawable/rand1"
        android:text="Random"
        android:textAllCaps="false"></ImageView>

    <ImageView
        android:id="@+id/ivBackToMainMenu"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/back"
        android:text="Back"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"></ImageView>


</LinearLayout>