<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/bubble8"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:fontFamily="@font/alfa_slab_one"
        android:text="MathGolf"
        android:textAlignment="center"
        android:textSize="50dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Play"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/btnInstructions"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Instructions"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/btnMuteMusic"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mute Music"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/btnMuteSounds"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mute Sound"
            android:textAllCaps="false"></Button>
    </LinearLayout>

    <TextView
        android:id="@+id/tvBattery"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"></TextView>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/unnamed"
        android:id="@+id/ivReset"
        ></ImageView>

</LinearLayout>